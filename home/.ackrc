--type-set=markdown:ext:markdown,md,mdown
--type-set=md:ext:markdown,md,mdown
--type-set=actionscript:ext:as
--type-set=rdoc:ext:rdoc
--type-add=sql:ext:ddl

--type-set=scss:ext:scss
--type-set=coffee:ext:coffee

